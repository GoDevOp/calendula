<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context="es.usc.citius.servando.calendula.pharmacies.fragments.PharmacyFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pharmacy_detail_header">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="-30dp"
                    android:src="@drawable/pills"
                    android:id="@+id/image_pills"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/detail_pharmacy_name"
                    android:layout_alignLeft="@id/image_pills"
                    android:layout_alignTop="@id/image_pills"
                    android:layout_alignRight="@id/image_pills"
                    android:layout_alignBottom="@id/image_pills"
                    android:gravity="bottom"
                    android:layout_marginBottom="35dp"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:paddingLeft="35dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/pharmacy_detail_header">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"
                    android:id="@+id/pharmacy_detail_layout_hours">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        app:iiv_color="#afafaf"
                        app:iiv_icon="gmd-time"
                        android:id="@+id/detail_clock_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pharmacy_detail_hour"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/detail_clock_icon"
                        android:layout_toEndOf="@+id/detail_clock_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pharmacy_detail_state"
                        android:textAppearance="@style/medium_bold"
                        android:textColor="@color/android_green_dark"
                        android:textSize="15dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginRight="80dp"
                        android:layout_gravity="right"/>

                </LinearLayout>

                <View
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="80dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/pharmacy_detail_layout_hours"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:id="@+id/pharmacy_detail_layout_tel"
                    android:layout_below="@id/pharmacy_detail_layout_hours">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        app:iiv_color="#b1b2b2"
                        app:iiv_icon="gmd-phone"
                        android:id="@+id/detail_tel_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pharmacy_detail_tel"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/detail_tel_icon"
                        android:layout_toEndOf="@+id/detail_tel_icon"/>

                </LinearLayout>

                <View
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="80dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/pharmacy_detail_layout_tel"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="15dp"
                    android:id="@+id/pharmacy_detail_layout_dir"
                    android:layout_below="@id/pharmacy_detail_layout_tel">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        app:iiv_color="#b1b2b2"
                        app:iiv_icon="gmd-map"
                        android:id="@+id/detail_dir_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pharmacy_detail_dir"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/detail_tel_icon"
                        android:layout_toEndOf="@+id/detail_tel_icon"/>

                </LinearLayout>

                <View
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="80dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/pharmacy_detail_layout_dir"
                    android:background="@android:color/darker_gray"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center|fill"
                    android:layout_below="@id/pharmacy_detail_layout_dir"
                    android:id="@+id/layout_time_car">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        app:iiv_color="#b1b2b2"
                        app:iiv_icon="gmd-directions_car"
                        android:id="@+id/icon_car"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/detail_time_car"
                        android:textSize="15dp"
                        android:textColor="@color/android_blue_dark"
                        android:text="..."
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/icon_car"
                        android:layout_toEndOf="@id/icon_car"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/layout_time_bike"
                    android:layout_below="@id/layout_time_car">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        app:iiv_color="#b1b2b2"
                        app:iiv_icon="gmd-directions_bike"
                        android:id="@+id/icon_bike"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/detail_time_bike"
                        android:textSize="15dp"
                        android:textColor="@color/android_blue_dark"
                        android:text="..."
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/icon_bike"
                        android:layout_toEndOf="@id/icon_bike"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/layout_time_walking"
                    android:layout_below="@id/layout_time_bike">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        app:iiv_color="#b1b2b2"
                        app:iiv_icon="gmd-directions_walk"
                        android:id="@+id/icon_walking"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/detail_time_walking"
                        android:textSize="15dp"
                        android:textColor="@color/android_blue_dark"
                        android:text="..."
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/icon_walking"
                        android:layout_toEndOf="@id/icon_walking" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_time_public"
                    android:layout_below="@id/layout_time_walking">

                    <com.mikepenz.iconics.view.IconicsImageView
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        app:iiv_icon="gmd-directions_subway"
                        app:iiv_color="#b1b2b2"
                        android:id="@+id/icon_public"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/detail_time_public"
                        android:textSize="15dp"
                        android:textColor="@color/android_blue_dark"
                        android:text="..."
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/icon_public"
                        android:layout_toEndOf="@id/icon_public" />

                </RelativeLayout>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/get_pharmacy_route_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="15dp"
                    android:paddingTop="3dp"
                    android:scaleType="center"
                    app:backgroundTint="#169E58"
                    android:layout_alignParentTop="false" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#eeeeee"
                android:gravity="center"
                android:id="@+id/pharmacy_weekley_hours"
                android:padding="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Horario semanal"
                    android:textSize="20dp"
                    android:id="@+id/pharmacy_hours_title"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="{gmd-close}"
                    android:textSize="20dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/pharmacy_hours_close"/>

                <View
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_below="@id/pharmacy_hours_title"
                    android:background="@android:color/darker_gray"/>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="7"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/pharmacy_hours_title">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:text="Luns"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:text="09:00-14:30\n16:30-21:30"
                        android:id="@+id/pharmacy_hour_monday"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_column="0"
                        android:layout_row="1"
                        android:text="Martes"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_column="1"
                        android:layout_row="1"
                        android:text="09:00-14:30\n16:30-21:30"
                        android:id="@+id/pharmacy_hour_tuesday"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_column="0"
                        android:layout_row="2"
                        android:text="Mércores"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_column="1"
                        android:layout_row="2"
                        android:text="09:00-14:30\n16:30-21:30"
                        android:id="@+id/pharmacy_hour_wensday"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_column="0"
                        android:layout_row="3"
                        android:text="Xoves"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_column="1"
                        android:layout_row="3"
                        android:text="09:00-14:30\n16:30-21:30"
                        android:id="@+id/pharmacy_hour_thursday"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_column="0"
                        android:layout_row="4"
                        android:text="Venres"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_column="1"
                        android:layout_row="4"
                        android:text="09:00-14:30\n16:30-21:30"
                        android:id="@+id/pharmacy_hour_friday"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_column="0"
                        android:layout_row="5"
                        android:text="Sábado"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_column="1"
                        android:layout_row="5"
                        android:text="09:00-14:30\n16:30-21:30"
                        android:id="@+id/pharmacy_hour_saturday"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_column="0"
                        android:layout_row="6"
                        android:text="Domingo"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_column="1"
                        android:layout_row="6"
                        android:text="09:00-14:30\n16:30-21:30"
                        android:id="@+id/pharmacy_hour_sunday"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        />

                </GridLayout>

            </RelativeLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/view_week_hours_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="230dp"
                android:paddingTop="3dp"
                android:scaleType="center"
                app:backgroundTint="#ebeced"
                />
        </RelativeLayout>
    </ScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_pharmacy"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_marginTop="30dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

</FrameLayout>
