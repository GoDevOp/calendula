<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="80dp"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:paddingTop="10dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/pharmacy_list_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/pharmacy_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:text="Name"
        android:textSize="15dp"
        tools:text="Name" />

    <TextView
        android:id="@+id/pharmacy_list_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/pharmacy_list_icon"
        android:layout_below="@id/pharmacy_list_name"
        android:layout_marginLeft="56dp"
        android:text="Address"
        android:textColor="#777"
        android:textSize="12dp"
        tools:text="Address" />

    <TextView
        android:id="@+id/pharmacy_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pharmacy_list_address"
        android:layout_marginLeft="56dp"
        android:text="Time"
        android:textColor="#777"
        android:textSize="12dp"
        tools:text="Time" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/darker_gray"/>

</RelativeLayout>