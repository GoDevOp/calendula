<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_pharmacies_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.usc.citius.servando.calendula.pharmacies.activities.PharmaciesMapActivity">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/get_pharmacy_route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="145dp"
        android:layout_marginRight="15dp"
        android:paddingTop="3dp"
        android:scaleType="center"
        app:backgroundTint="#169E58"
        />

    <com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoDragView="@+id/dragView"
        sothree:umanoOverlay="false"
        sothree:umanoPanelHeight="175dp"
        sothree:umanoParalaxOffset="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/map"
                tools:context=".MapsActivity"
                android:name="com.google.android.gms.maps.SupportMapFragment"/>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:tools="http://schemas.android.com/tools"
                            android:id="@+id/pharmacies_search_bar"
                            android:layout_width="match_parent"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="34dp"
                            android:background="@drawable/shape_list_item"
                            android:layout_height="50dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/search_pharmacies_image"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:layout_marginLeft="10dp"/>

                    <EditText
                        android:id="@+id/search_pharmacies_text"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:padding="10dp"
                        android:layout_gravity="center_vertical"
                        android:hint="@string/pharmacy_search"
                        android:textColor="@android:color/black"
                        android:background="@null"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:focusable="false"
                        android:maxLines="1"
                        android:textColorHighlight="@color/android_orange"
                        android:layout_margin="0dp"
                        >
                    </EditText>

                </LinearLayout>

                <ProgressBar
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:id="@+id/search_pharmacies_loading"
                    android:layout_gravity="center_vertical"
                    android:indeterminate="true"
                    android:visibility="invisible"
                    android:layout_alignParentBottom="true"
                    android:layout_width="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="35dp"/>

                <com.mikepenz.iconics.view.IconicsButton
                    android:id="@+id/voice_search_pharmacies"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    style="?android:attr/borderlessButtonStyle"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_width="35dp"/>

                <com.mikepenz.iconics.view.IconicsButton
                    android:id="@+id/clear_search_pharmacies"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/voice_search_pharmacies"
                    style="?android:attr/borderlessButtonStyle"
                    android:text="{gmd-close}"
                    android:textSize="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_width="35dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/center_map_pharmacies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/pharmacies_list_button"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="10dp"
                    android:paddingTop="4dp"
                    android:scaleType="center"
                    app:backgroundTint="#ffffff"
                    />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/pharmacies_list_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom|right"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:paddingTop="3dp"
                    android:scaleType="center"
                    app:backgroundTint="#ffffff"
                    android:layout_marginBottom="15dp"/>

            </RelativeLayout>

        </RelativeLayout>

        <!-- SLIDING LAYOUT -->
        <LinearLayout
            android:id="@+id/dragView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:clickable="true"
            android:focusable="false"
            android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/fragment_contenedor"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:layout_centerHorizontal="true">
                </RelativeLayout>
        </LinearLayout>

    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pharmacies_list"
        android:visibility="gone">
    </RelativeLayout>

</RelativeLayout>
